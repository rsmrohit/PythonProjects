<WebcamScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            size_hint_y: 0.8
            fit_mode: 'fill'
            resolution: (600, 480)
            play: False
        Button:
            id: camera_button
            size_hint_y: 0.1
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play==False else root.stop()
        Button:
            size_hint_y: 0.1
            text: 'Capture'
            on_press: root.capture()

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            allow_stretch: True
            size_hint_y: 0.7
            id: img
        Button:
            size_hint_y: 0.1
            text: 'Create Shareable Link'
            on_press: root.create_link()
        Label:
            id: link
            size_hint_y: 0.1
            text: ''
        GridLayout:
            size_hint_y: 0.1
            cols: 2
            spacing: 10
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
            Button:
                text: 'Open Link'
                on_press: root.open_link()
        


<RootWidget>:
    WebcamScreen:
        id: webcam_screen
        name: 'webcam_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'